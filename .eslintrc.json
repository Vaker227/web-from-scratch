{
	"root": true,
	"env": {
		"node": true,
		"browser": true,
		"es6": true
	},
	"extends": ["standard", "prettier", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"rules": {
		"space-infix-ops": "warn",
		"no-console": [1]
	},
	"ignorePatterns": ["/gulpfile.js"]
}
